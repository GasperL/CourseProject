@model Core.Common.ViewModels.ProviderRequestViewModel[]

<div class="container-x2 rounded bg-light">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-4">
                    </div>
                    <div class="col-sm-4">
                        <h2 class="text-center">Заявки</h2>
                    </div>
                    <div class="col-sm-4">
                        <div class="search-box">
                            <div  class="input-group">
                                <span class="input-group-addon">
                                    <i class="fas fa-search-dollar"></i>
                                </span>
                                <input type="text" id="myInputTextField" class=" form-control form-control-sm bg-light" placeholder="Поиск">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <table id="example" class="table table-striped">
                <thead>
                <tr>
                    <th>Пользователь №<i class="fa fa-sort"></i></th>
                    <th>Производитель №<i class="fa fa-sort"></i></th>
                    <th>Производитель<i class="fa fa-sort"></i></th>
                    <th>Описания<i class="fa fa-sort"></i></th>
                    <th>Статус<i class="fa fa-sort"></i></th>
                    <th>Действия</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in @Model)
                {
                    <tr>
                        <td>@item.UserId[..8]</td>
                        <td>@item.ProviderId.ToString()[..8]</td>
                        <td >@item.Name</td>
                        <td class="text-center"><a href="" class="view-description "><i class="far fa-eye"></i></a> </td>
                        <td>@item.Status</td>
                        <td>
                            <a href="#" class="accept-request" title="Принять" data-toggle="tooltip">
                                <i class="fas fa-check"></i>
                            </a>
                            <a href="#" class="reject-request" title="Отклонить" data-toggle="tooltip">
                                <i class="fas fa-times"></i>
                            </a>
                            <a href="#" class="request-view" title="Подробнее" data-toggle="tooltip">
                                <i class="fas fa-binoculars"></i>
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/lib/DataTables/DataTables-1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/DataTables/DataTables-1.10.25/js/dataTables.bootstrap5.min.js"></script>
}


