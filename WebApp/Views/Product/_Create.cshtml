@model Core.Common.CreateViewModels.CreateProductViewModel

<link rel="stylesheet" href="~/css/card.css"/>

<div class="animate__animated animate__fadeInDown fade">
    <div class="modal-content">
        <div class="row col-sm-6 mx-auto">
            <div class="bg-light rounded py-4 px-4">
                <div class="container">
                    <div class="row-cols-1 py-3">
                        <h1 class="text-center">Добавление товара</h1>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>
                </div>
                <form method="post" asp-action="NewProduct" enctype="multipart/form-data">
                    <input type="hidden" asp-for="ProviderId">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        @await Html.PartialAsync("_ProductPhoto", @Model)
                        @await Html.PartialAsync("_ProductCreateInputs", @Model)
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}