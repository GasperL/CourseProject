@model Core.Common.ViewModels.ProductViewModel

<div class="row col-md-3">
    <div class="mb-5">
        <div class="card">
            <img class="card-img-top" src="@Model.PhotoBase64" alt="..."/>
            <div class="card-body p-4">
                <div class="text-center">
                    <h5 class="fw-bolder">@Model.ProductName</h5>
                    $@Model.Price.ToString("0.##")
                </div>
            </div>
            <!-- Product actions-->
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                <div class="text-center">
                    <a class="btn btn-outline-dark mt-auto" href="#">в корзину</a>
                </div>
            </div>
        </div>
    </div>
</div>