@model Core.Common.ViewModels.CategoryViewModel

<div class="modal-content col-md-5 bg-light rounded mx-auto">
    <div class="modal-header">
        <h1 class="text-center">Добавление категории</h1>
    </div>

    <div class="row-cols-1 py-3">

        <div class="container">
            <div class="row">
                <form method="post" type="hidden" asp-action="Add">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-sm-9 mx-auto">
                        <div class="container">
                            <div class="mb-3">
                                <input type="text" asp-for="Name" value="@Model.Name" id="input-product-name" class="form-control" placeholder="Имя категории">
                            </div>
                        </div>
                        <div class="container my-1">
                            <div class="row-cols-1 py-2">
                                <input type="submit" value="Отправить" class="btn btn-primary"/>
                            </div>
                            <div class="row-cols-1 py-2">
                                <button type="button" class="close btn btn-secondary" data-bs-dismiss="modal" aria-label="Close">Закрыть</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>